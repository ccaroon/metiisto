<form class="pure-form pure-form-aligned" method="post" action="/users/[% user.id %]/edit">
<div class="ui-widget">
    <div id="user-settings">
        <ul>
            <li><a href="#user-information">User Information</a></li>
            <li><a href="#entries-prefs">Entries Prefs</a></li>
            <li><a href="#misc">Misc</a></li>
            <li><a href="#jira-config">Jira Config</a></li>
            <li><a href="#email-config">Email Config</a></li>
        </ul>
        <div id="user-information" class="ui-widget-content">
            <div class="pure-control-group" >
                <label for="user_name">Name:</label>
                <input type="text" id="user_name" name="user.name" size="32" value="[% user.name %]">
            </div>

            <div class="pure-control-group" >
                <label for="user_email">Email:</label>
                <input type="text" id="user_email" name="user.email" size="32" value="[% user.email %]">
            </div>

            <div class="pure-control-group" >
                <label for="user_location">Location:</label>
                <input type="text" id="user_location" name="user.location" size="32" value="[% user.location %]"><button id="help-location"><i class="fa fa-question"></i></button>
                <div id="help-location-dialog" title="Help : Location">
                    <p>Location is specified using a Yahoo! WOEID (Where On Earth ID).</p>

                    <a href="http://woeid.rosselliot.co.nz">Click Here to look up the WOEID for your location.</a>
                </div>
            </div>
        </div>

        <div id="entries-prefs" class="ui-widget-content">
            <div class="pure-control-group" >
                <label for="entries-track-time-on">Track Time:</label>
                <input type="radio" id="entries-track-time-on" name="user.preferences.track_time" [% user.preferences('track_time') == 'true' ? 'checked' : '' %] value="true"> On
                <input type="radio" id="entries-track-time-off" name="user.preferences.track_time" [% user.preferences('track_time') == 'false' ? 'checked' : '' %] value="false"> Off
            </div>
        </div>

        <div id="misc" class="ui-widget-content">
            
            <div class="pure-control-group" >
                <label for="user_pref_theme">Theme:</label>
                <select id="user_pref_theme" name="user.preferences.theme">
                    [% FOREACH theme IN themes %]
                        [% selected = user.preferences('theme') == theme ? "selected" : "" %]
                        <option [% selected %] value="[% theme %]">[% theme | ucfirst %]</option>
                    [% END %]
                </select>
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_passphrase">Passphrase:</label>
                <input type="text" size="56" maxlength="56" id="user_pref_passphrase" name="user.preferences.encryption_passphrase" value="[% user.preferences('encryption_passphrase') %]">
            </div>

            <div class="pure-control-group" >
                <label for="user_pref_report_recpt">Report Emails:</label>
                <input type="text" size="64" id="user_pref_report_recpt" name="user.preferences.report_recipients" value="[% user.preferences('report_recipients') %]">
            </div>
        </div>
        
        <div id="jira-config" class="ui-widget-content">
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_host">Host:</label>
                <input type="text" id="user_pref_jira_host" name="user.preferences.jira_host" size="32" value="[% user.preferences('jira_host') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_user">User:</label>
                <input type="text" id="user_pref_jira_user" name="user.preferences.jira_username" size="32" value="[% user.preferences('jira_username') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_pass">Password:</label>
                <input type="text" id="user_pref_jira_pass" name="user.preferences.jira_password" size="32" value="[% user.preferences('jira_password') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_project_id">Project ID:</label>
                <input type="text" id="user_pref_jira_project_id" name="user.preferences.jira_project_id" size="32" value="[% user.preferences('jira_project_id') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_tickets_filter_id">Tickets Filter:</label>
                <input type="text" id="user_pref_jira_tickets_filter_id" name="user.preferences.jira_tickets_filter_id" size="32" value="[% user.preferences('jira_tickets_filter_id') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_jira_current_release_filter_id">Current Release Filter:</label>
                <input type="text" id="user_pref_jira_current_release_filter_id" name="user.preferences.jira_current_release_filter_id" size="32" value="[% user.preferences('jira_current_release_filter_id') %]">
            </div>

            <div class="pure-control-group" >
                <label for="user_pref_jira_my_tickets_cache_ttl">My Tickets Cache TTL:</label>
                <input type="text" id="user_pref_jira_my_tickets_cache_ttl" name="user.preferences.jira_my_tickets_cache_ttl" size="32" value="[% user.preferences('jira_my_tickets_cache_ttl') %]">
            </div>

            <div class="pure-control-group" >
                <label for="user_pref_jira_current_release_cache_ttl">Current Release Cache TTL:</label>
                <input type="text" id="user_pref_jira_current_release_cache_ttl" name="user.preferences.jira_current_release_cache_ttl" size="32" value="[% user.preferences('jira_current_release_cache_ttl') %]">
            </div>

        </div>

        <div id="email-config" class="ui-widget-content">
            <div class="pure-control-group" >
                <label for="user_pref_smtp_host">SMTP Host:</label>
                <input type="text" id="user_pref_smtp_host" name="user.preferences.smtp_host" size="32" value="[% user.preferences('smtp_host') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_smtp_port">SMTP Port:</label>
                <input type="text" id="user_pref_smtp_port" name="user.preferences.smtp_port" size="32" value="[% user.preferences('smtp_port') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_smtp_user">SMTP User:</label>
                <input type="text" id="user_pref_smtp_user" name="user.preferences.smtp_user" size="32" value="[% user.preferences('smtp_user') %]">
            </div>
            
            <div class="pure-control-group" >
                <label for="user_pref_smtp_pass">SMTP Passwd:</label>
                <input type="text" id="user_pref_smtp_pass" name="user.preferences.smtp_pass" size="32" value="[% user.preferences('smtp_pass') %]">
            </div>
        </div>
    </div>

    <div class="pure-controls">
        <input id="button-save-user" type="submit" value="Save">
        <a id="button-logout" href="/users/logout">Logout</a>
    </div>

</div>
</form>

<script>

    $('#user-settings').tabs();

    $('#help-location').button({ text: false })
    .click(function () {
        $('#help-location-dialog').dialog('open');
        return (false);
    });

    $('#help-location-dialog').dialog({
        resizable: false,
        width: 450,
        module: true,
        autoOpen: false,
        position: {my: "center", at: "center", of: $('#help-location')}
    });

    $('#button-save-user').button();
    $('#button-logout').button();
</script>
