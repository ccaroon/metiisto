#!/bin/bash
################################################################################
DIR=`dirname $0`
APP_DIR=$DIR/..
PID_FILE=$APP_DIR/logs/metiisto.pid
PORT=5000
################################################################################
if [ -z $METIISTO_SERVER ]; then METIISTO_SERVER='Starman'; fi;
if [ -z $METIISTO_ENV ]; then METIISTO_ENV='production'; fi;
################################################################################
function app_start
{
    cd $APP_DIR;

    if [ -f $PID_FILE ]; then
        echo "Already running: `cat $PID_FILE`";
    else
        if [ "X$1" == 'Xdevel' ]; then
            plackup -s $METIISTO_SERVER -E development -p $PORT --pid $PID_FILE -a bin/app.pl
        else
            plackup -s $METIISTO_SERVER -E $METIISTO_ENV -p $PORT -D --pid $PID_FILE --access-log logs/$METIISTO_ENV.log --error-log logs/error.${METIISTO_ENV}.log -a bin/app.pl &> /dev/null
        fi

        if [ -f $PID_FILE ]; then
            echo "Started: `cat $PID_FILE`"
        else
            echo "Unable to start.";
        fi

    fi
}
################################################################################
function app_stop
{
    if [ -f $PID_FILE ]; then
        kill `cat $PID_FILE`
        echo "Stopped.";
    else
        echo "Not running.";
    fi
}
################################################################################
function app_status
{
    if [ -f $PID_FILE ]; then
        ps -fp `cat $PID_FILE`
    else
        echo "Not running.";
    fi
}
################################################################################
function app_env
{
    if [ $1 ]; then
        echo "Please use this command: sh> export METIISTO_ENV=$1";
    else
        echo "Environment: $METIISTO_ENV";
    fi
}
################################################################################
case $1 in
    start) 
        app_start;
    ;;
    start_devel)
        app_start 'devel';
    ;;
    stop) 
        app_stop;
    ;;
    restart) 
        app_stop;
        sleep 1
        app_start;
    ;;
    status) 
        app_status;
    ;;
    env) 
        app_env $2;
    ;;
    run)
        DANCER_ENVIRONMENT=$METIISTO_ENV perl -Mstrict -M"Dancer ':script'" -MDancer::Plugin::Database $2
    ;;
    log) 
        tail -f $APP_DIR/logs/$METIISTO_ENV.log
    ;;
    *) echo "metiisto: Unknown command [$1]";
esac
################################################################################
