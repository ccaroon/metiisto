#!/bin/bash
################################################################################
DIR=`dirname $0`
APP_DIR=$DIR/..
PID_FILE=$APP_DIR/logs/metiisto.pid
################################################################################
if [ -z $METIISTO_SERVER ]; then METIISTO_SERVER='Starman'; fi;
if [ -z $METIISTO_ENV ]; then METIISTO_ENV='production'; fi;
################################################################################
function app_start
{
    cd $APP_DIR;

    if [ -f $PID_FILE ]; then
        echo "Already running: `cat $PID_FILE`";
    else
        plackup -s $METIISTO_SERVER -E $METIISTO_ENV -p 5000 -D --pid $PID_FILE --access-log logs/$METIISTO_ENV.log --error-log logs/error.${METIISTO_ENV}.log -a bin/app.pl &> /dev/null

        if [ -f $PID_FILE ]; then
            echo "Started: `cat $PID_FILE`"
        else
            echo "Unable to start.";
        fi

    fi
}
################################################################################
function app_stop
{
    if [ -f $PID_FILE ]; then
        kill `cat $PID_FILE`
        echo "Stopped.";
    else
        echo "Not running.";
    fi
}
################################################################################
function app_status
{
    if [ -f $PID_FILE ]; then
        ps -fp `cat $PID_FILE`
    else
        echo "Not running.";
    fi
}
################################################################################
case $1 in
    start) 
        app_start;
    ;;
    stop) 
        app_stop;
    ;;
    restart) 
        app_stop;
        sleep 1
        app_start;
    ;;
    status) 
        app_status;
    ;;
    log) 
        tail -f $APP_DIR/logs/$METIISTO_ENV.log
    ;;
    *) echo "metiisto: Unknown command [$1]";
esac
################################################################################
