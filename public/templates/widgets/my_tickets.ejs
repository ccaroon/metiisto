<table width="100%" class="ui-widget-content">
    <% for (var i=0; i < tickets.length; i+=1) { %>
        <% var ticket = tickets[i] %>

        <% var tr_class = (i % 2 == 0) ? 'ui-state-default m-not-bold' : 'NONE' %>
        <tr class="<%= tr_class %>">
            <td align="center">
                <a href="/entries/new?ticket_num=<%= ticket.key %>&subject=<%= encodeURIComponent(ticket.summary) %>&category=Ticket"><span class="ui-icon ui-icon-arrowreturnthick-1-s"></span></a>
            </td>
            <td>
                <a href="<%= ticket.link %>"><%= ticket.key %> - <%= ticket.summary %></a>
                (<font color="<%= ticket.color %>"><%= ticket.status %></font>, <%= ticket.type %>, <%= ticket.points %>)
                <%  if (ticket.sub_tasks.length != 0) { %>
                     (<a href="javascript:toggle_sub_tasks('<%= ticket.key %>')"><%= ticket.sub_tasks.size %> Sub-tasks</a>)
                <% } %>
            </td>
        </tr>

        <tr id="sub_task-<%= ticket.key %>" style="display:none" class="<%= tr_class %>">
            <td>&nbsp;</td>
            <td colspan="1">
                <table border="0">
                    <% for (var j = 0; j < ticket.sub_tasks.length; j+=1) { %>
                        <% var sub = ticket.sub_tasks[j] %>
                        <tr>
                            <td align="center">
                                <a href="/entries/new?ticket_num=<%= sub.key %>&subject=<%= encodeURIComponent(sub.summary) %>&category=Ticket"><span class="ui-icon ui-icon-arrowreturnthick-1-s"></span></a>
                            </td>
                            <td>
                                <a href="<%= sub.link %>"><%= sub.key %> - <%= sub.summary %></a> (<font color="<%= sub.color %>"><%= sub.status %></font>)
                            </td>
                        </tr>
                    <% } %>
                </table>
            </td>
        </tr>

   <% } %>

</table>
